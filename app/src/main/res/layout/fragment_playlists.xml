<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".library.ui.PlaylistsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/NewPlaylistButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="54dp"
            android:textAllCaps="false"
            android:backgroundTint="?attr/colorOnPrimaryFixedVariant"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            android:letterSpacing="0"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:textColor="?attr/colorPrimary"
            android:text="@string/new_playlist" />


    <ImageView
        android:id="@+id/errorImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="106dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:srcCompat="@drawable/empty_response" />

        <TextView
            android:id="@+id/errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/errorImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/no_playlist"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="400"
            android:textSize="19sp"
            android:textColor="?attr/colorOnPrimaryFixedVariant"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
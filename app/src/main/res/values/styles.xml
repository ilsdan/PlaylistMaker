<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">@dimen/main_button_icon_padding</item>
        <item name="iconTint">@color/gray</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="SettingsListItemStyle">
        <item name="android:layout_height">@dimen/settings_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="SearchEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:background">@drawable/search_edit_text_background</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:drawableStart">@drawable/loupe</item>
        <item name="android:drawableTint">?attr/colorOnBackground</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:hint">@string/search_label</item>
    </style>
    <style name="ClearIcon">
        <item name="android:layout_width">@dimen/clear_icon_size</item>
        <item name="android:layout_height">@dimen/clear_icon_size</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/clear_icon_size</item>
        <item name="android:src">@drawable/cancel</item>
    </style>
    <style name="ToolbarStyle">
        <item name="navigationIcon">@drawable/arrow_back</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ToolbarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimaryFixedVariant</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">26sp</item>
    </style>



</resources>